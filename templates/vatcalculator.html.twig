{% extends 'base.html.twig' %} 

   {% block body %} 
   <div class="w-4/5 m-auto text-center">
        <div class="py-12 border-b border-gray-200">
            <h1 class="mt-2 mb-3">
                Vat Calculator
            </h1>            
        </div>
    </div>
   <div class="col-4 container"> 
      {{ form_start(form) }}

        {{ form_widget(form) }}
        <div class="d-flex justify-content-between">
            <button type="submit" class="btn btn-primary mt-3 float-left">Calculate</button>
            <a href="{{ path('vatcalculationhistory') }}" class="btn btn-primary mt-3 text-right float-right">Vat Calculation History</a>
        </div>
    {{ form_end(form) }}
    
   </div> 
{% endblock %}