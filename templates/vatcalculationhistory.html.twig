{% extends "base.html.twig" %}

{% block body %}
    <div class="w-4/5 m-auto text-center">
        <div class="py-12 border-b border-gray-200">
            <h1 class="mt-2 mb-3">
                Vat Calculation History
            </h1>            
        </div>
    </div>
    {% if vatcalculationhistory|length %}  
        <div class="container mt-4 mb-3">        
            <a href="{{ path('vatcalculator') }}" class="btn btn-primary">Vat Calculator</a>                 
            <a href="{{ path('vatcalculation_export_history') }}" class="btn btn-primary">Export Vat Calculation History</a>
            <a class="btn btn-danger btn-block" href="{{ path('vatcalculation_delete_history') }}" onclick="confirm('Are you sure to delete Vat Calculation History?') || event.preventDefault()">
                Delete Vat Calculation History
            </a>  
        <div class="mt-3">
        <table class="table table-bordered">
            <thead>
                <tr>           
                    <th scope="col" class="text-center">User Amount</th>
                    <th scope="col" class="text-center">Vat Rate (%)</th>	
                    <th scope="col" class="text-center">Gross Amount (Inclusive of VAT)</th>
                    <th scope="col" class="text-center">Net Amount (Exclusive of VAT)</th>
                    <th scope="col" class="text-center">Total Vat</th>		           
                </tr>
            </thead>
            <tbody>       
                {% for historyData in vatcalculationhistory %}
                    <tr>            
                        <td class="text-center">{{ historyData.user_input_amount }} </td>
                        <td align="center">{{ historyData.vat_rate }}</td>
                        <td align="center">{{ historyData.including_vat_amount }}</td>
                        <td align="center">{{ historyData.excluding_vat_amount }}</td>
                        <td align="center">{{ historyData.vat_amount }}</td>
                    </tr>            
                {% endfor %}
            </tbody>
        </table>   
    </div>
    </div>
    {% endif %}
{% endblock %}